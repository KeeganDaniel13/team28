<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EEEEEEEE">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round1"
            android:padding="10dp">
            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/banar1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/jbl"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:view_borderWidth="0dp"
                app:view_borderColor="#cccccc" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <app.ciro.chuck.betaapp.MyTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="JBL Flip 3 "
                    android:inputType="text"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:background="#00000000"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_shapes"/>


                    <app.ciro.chuck.betaapp.MyTextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bluetooth Speakers"
                        android:textSize="16dp"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <app.ciro.chuck.betaapp.MyTextView
                        android:id="@+id/duty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="R 278.00"
                        android:textSize="16dp"
                        android:textColor="#b20000"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="5dp"/>

              </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>